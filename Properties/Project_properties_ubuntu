project_name: cpp_test_ubuntu # the name of the project also used for git repository name, [a-0-9-_.] only
installer_name: cpp_ubuntu.tar # the name for the project installer
owner: me
owner_email: me@myproject
root_dist: ubuntu
dist_tag: trusty
extra_sw: git build-essential
version_control: git
project_location: https://scott_reeve@bitbucket.org/scott_reeve/freedops_test.git
project_destination: /var/local/project # must not be /var/local, otherwise the runfile will be hidden
build_command: sh build.sh
test_command: ./main
additional_commands1: # no additional commands
additional_commands2: # no additional commands
